<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HTML Forms</title>
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body id="body">
    <header
      class="header sticky-top bg-white d-flex align-items-center justify-content-between"
    >
      <img src="../assets/icons/Dumbways.png" alt="" class="logo" />

      <nav class="navbar">
        <ul>
          <li><a href="/add-project">Add Project</a></li>
          <li><a href="/project">My Project</a></li>
        </ul>
      </nav>

      <button id="contact">Contact Me</button>
    </header>

    <div class="form-wrapper">
      <div class="container">
        <section class="form-title">
          <h1>ADD MY PROJECT</h1>
        </section>

        <section class="form-section">
          <form
            class="form"
            action="/add-project"
            method="POST"
            id="form-submit"
          >
            <div class="form-items">
              <label for="project_name">Project Name</label>
              <input
                type="text"
                name="project_name"
                id="project_name"
                required
              />
            </div>

            <div class="form-items" id="split-column">
              <div class="date-field">
                <label for="start_date">Start Date</label>
                <input type="date" name="start_date" id="start_date" required />
              </div>
              <div class="date-field">
                <label for="end_date">End Date</label>
                <input type="date" name="end_date" id="end_date" required />
              </div>
            </div>

            <div class="form-items">
              <label for="description">Description</label>
              <textarea name="description" id="description" required></textarea>
            </div>

            <div class="form-items technologies">
              <label><input
                  type="checkbox"
                  name="technologies"
                  value="nodejs"
                />
                Node.js</label>
              <label><input
                  type="checkbox"
                  name="technologies"
                  value="reactjs"
                />
                React.js</label>
              <label><input
                  type="checkbox"
                  name="technologies"
                  value="nextjs"
                />
                Next.js</label>
              <label><input
                  type="checkbox"
                  name="technologies"
                  value="typescript"
                />
                TypeScript</label>
            </div>

            <div class="form-items" id="upload-img">
              <label for="upload">Upload Image</label>
              <input type="file" name="upload" id="upload" />
            </div>

            <div class="button-container">
              <button
                class="btn btn-primary w-100 rounded btn-lg"
                type="submit"
                id="submit"
              >
                Submit
              </button>
            </div>
          </form>
        </section>

      </div>
    </div>

    <script src="assets/scripts/index.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>